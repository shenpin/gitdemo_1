<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tzy.mapper.UserMapper">
    <select id="validateUser" resultType="string">
        SELECT username FROM users
        WHERE username = #{username} AND password = #{password}
    </select>
    <insert id="insertUser" parameterType="com.tzy.pojo.User">
        INSERT INTO users (username,password)
        VALUES (#{username}, #{password})
    </insert>

    <!-- 根据用户名获取用户信息 -->
    <select id="getUserByUsername" resultType="com.tzy.pojo.User" parameterType="string">
        SELECT * FROM users WHERE username = #{username}
    </select>
    
    <delete id="deleteUser" parameterType="com.tzy.pojo.User">
        delete from users where username =#{username} AND password = #{password}
    </delete>
</mapper>
